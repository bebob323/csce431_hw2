-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
     - if params[:order_movies]
        %th= link_to 'Movie Title', movies_path({ :order_movies => "Movies"})
     - else
        %th.hilite= link_to 'Movie Title', movies_path({ :order_movies => "Movies"})
      %th Rating
      %th= link_to 'Release Date', movies_path({ :order_dates => "RD"})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path